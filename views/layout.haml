%html{:lang=>"en"}
  / <![endif]
  %head
    %meta{:charset=>"utf8"}
    %meta{:content=>"width=device-width, initial-scale=1, maximum-scale=1", :name=>"viewport"}

    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    %link{:href=>"http://fonts.googleapis.com/css?family=Magra|Source+Sans+Pro:400|Cinzel:700|Roboto:700|Squada+One|Archivo+Narrow|Inconsolata|Forum|Metrophobic|Wire+One|Sansita+One|Oswald|Judson:400", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/stylesheets/reset.css", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/stylesheets/zenburn.css", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/stylesheets/nav.css", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/stylesheets/post.css", :rel=>"stylesheet", :type=>"text/css"}

    %link{:href=>"/rss.xml",  :rel=>"alternate", :type=>"application/rss+xml",  :title=>title}
    %link{:href=>"/atom.xml", :rel=>"alternate", :type=>"application/atom+xml", :title=>title}

    %link{:href=>"/images/favicon.png", :rel=>"icon", :type=>"image/png"}

    %title #{title}
  %body
    .header
      = partial :nav
    .container
      = yield

    %script{:src=>"http://code.jquery.com/jquery-1.6.4.min.js"}
    %script{:src=>"/javascript/app.js"}

    -if @scripts
      -@scripts.each do |s|
        %script{:src=>"/javascript/#{@slug}/#{s}.js"}
