%nav
  .nav-content
    .nav-title
      %h3
        %a{:href=>"/"}
          #{TITLE}
    .nav-section
      %a.image.hidden{:href=>"/archive", :title=>"List past posts by topic", :alt=>"List past posts by topic"}<
        %img{:src=>"/images/archive.png"}
      %a.image{:href=>"http://github.com/#{GITHUB_USERNAME}", :title=>"#{GITHUB_USERNAME}'s code"}<
        %img{:src=>"/images/github.png", :title=>"#{GITHUB_USERNAME}'s code", :alt=>"#{GITHUB_USERNAME}'s code"}
      %a.image{:href=>"http://twitter.com/#{TWITTER_USERNAME}", :title=>"#{TWITTER_USERNAME}'s twitter profile"}<
        %img{:src=>"/images/t.png", :title=>"#{TWITTER_USERNAME}'s profile", :alt=>"#{TWITTER_USERNAME}'s twitter profile"}
      -#%a.image{:href=>"http://status.wilkie.io/users/#{RSTATUS_USERNAME}", :rel=>"me profile", :title=>"#{RSTATUS_USERNAME}'s rstat.us profile"}<
        %img{:src=>"/images/rstatus.png", :title=>"#{RSTATUS_USERNAME}'s profile", :alt=>"#{RSTATUS_USERNAME}'s rstat.us profile"}
      %a.image{:href=>"https://#{MASTODON_DOMAIN}/@#{MASTODON_USERNAME}", :rel=>"me profile", :title=>"#{MASTODON_USERNAME}'s rstat.us profile"}<
        %img{:src=>"/images/mastodon.png", :title=>"#{MASTODON_USERNAME}'s profile", :alt=>"#{MASTODON_USERNAME}'s rstat.us profile"}
    - if @summary
      %h3 tl;dr
      .nav-section
        %p.summary
          = yield_content :summary
    - if @title
      %h3 table of contents
      .nav-section
        %ul.toc
          = yield_content :toc
    %h3
      %a{:href=>"/archive", :title=>"List past topics by tag", :alt=>"List past topics by tag"}
        archive
      .nav-section
        %ul.archive
          - tags.each do |tag|
            %li
              tag
